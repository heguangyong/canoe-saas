
.page {
		height: 100vh;
}
.n-list{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.card-bg {
    background-size: cover;
    display: flex;
    justify-content: center;
    padding-top: 40rpx;
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}
.card-bg image {
    width: 200rpx;
    height: 200rpx;
}
.card-bg .gif-wave{
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}

