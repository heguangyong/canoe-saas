	/* 遮罩样式 */
.shade{
        width:100%;
        height: 100%;
        position: fixed;
        top:0;
        left:0;
        z-index: 90;
}
.trend-popup {
        display: flex;
        flex-direction: column;
        height: 950rpx;
        padding-bottom:62px;
        position: fixed;
        left:0;
        bottom: 0;
        width:100%;
        z-index: 95;
        border-top-left-radius: 3%;
        border-top-right-radius: 3%;
}
.trend-remove-popup {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        padding: 5px;
        height: 350rpx;
}
.trend-popup-close {
        position:absolute;
        top:30rpx;
        left:30rpx;
        font-size: 39rpx;
        text-align: center;
        font-weight: bold;
        z-index: 99;
}
.trend-popup-title {
        margin-top:15rpx;
        line-height: 60rpx;
        font-size: 28rpx;
        padding: 5rpx 0;
        text-align: center;
        font-weight: bold;
}
.trend-popup-content {

        display: flex;

        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        padding: 5px;
        max-height: 850rpx;
}

